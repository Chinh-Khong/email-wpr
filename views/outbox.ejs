<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Outbox</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      height: 100vh;
    }

    .inbox-container {
      width: 100%;
      background-color: rgb(31, 196, 247);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .inbox-content {
      width: 1200px;
      background-color: white;
      padding: 16px;
      height: 700px;
      border-radius: 10px;
    }

    .nav-bar {
      background-color: rgb(255, 255, 255);
      display: flex;
      justify-content: space-between;
      padding: 5px 20px;
    }

    .menu-items {
      font-weight: 500;
      font-size: 16px;
      cursor: pointer;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th,
    td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
    }

    hr {
      height: 1px;
      background-color: rgb(226, 204, 204);
    }

    .button-delete {
      display: flex;
      flex-direction: row;
      justify-content: flex-end;
    }
    #delete-emails {
      background-color: red;
      padding: 8px 10px;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      color: white;
      cursor: pointer;
    }
    .pagination {
      display: flex;
      flex-direction: row;
      justify-content: center;
      margin-top: 10px;
    }
  </style>
</head>

<body>
  <div class="inbox-container">
    <div class="inbox-content">
      <div class="nav-bar">
        <p class="menu-items">Xin chào: <%= userName %>
        </p>
        <p class="menu-items" onclick="location.href='/compose'">Compose</p>
        <p class="menu-items" onclick="location.href='/inbox'">Hộp thư đến</p>
        <p class="menu-items" onclick="location.href='/logout'">Đăng xuất</p>
      </div>
      <hr>
      <h1>Hộp thư đi</h1>
      <div class="button-delete">
        <button id="delete-emails">Xóa đã chọn</button>
      </div>
      <table>
        <thead>
          <tr>
            <th>Chọn</th>
            <th>Người nhận</th>
            <th>Chủ đề</th>
            <th>Thời gian</th>
          </tr>
        </thead>
        <tbody>
          <% if (sentEmails && sentEmails.length> 0) { %>
            <% sentEmails.forEach(email=> { %>
              <tr onclick="location.href='/email/<%= email.id %>'" style="cursor: pointer;">
                <td>
                  <input type="checkbox" class="email-checkbox" data-id="<%= email.id %>"
                    onclick="event.stopPropagation()">
                </td>
                <td>
                  <%= email.receiver_name %>
                </td>
                <td>
                  <%= email.subject %>
                </td>
                <td>
                  <%= new Date(email.sent_at).toLocaleDateString('en-GB') %>
                </td>
              </tr>
              <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="4">Không có email nào đã gửi.</td>
                  </tr>
                  <% } %>
        </tbody>
      </table>
      <!-- Pagination -->
      <div class="pagination">
        <% if (currentPage> 1) { %>
          <a href="/outbox?page=<%= currentPage - 1 %>">Trước</a>
          <% } %>

            <span>Trang <%= currentPage %> / <%= totalPages %></span>

            <% if (currentPage < totalPages) { %>
              <a href="/outbox?page=<%= currentPage + 1 %>">Tiếp theo</a>
              <% } %>
      </div>
    </div>
  </div>
  <script>
    document.getElementById('delete-emails').addEventListener('click', async () => {
      const checkboxes = document.querySelectorAll('.email-checkbox:checked');
      const emailIds = Array.from(checkboxes).map(checkbox => checkbox.getAttribute('data-id'));

      if (emailIds.length === 0) {
        alert('Vui lòng chọn ít nhất một email để xóa.');
        return;
      }

      if (confirm(`Bạn có chắc chắn muốn xóa ${emailIds.length} email đã chọn?`)) {
        try {
          // Tạo các yêu cầu xóa email đã chọn
          const deleteRequests = emailIds.map(id =>
            fetch(`/api/emails/sender/${id}`, { method: 'DELETE' })
          );

          // Chờ tất cả các yêu cầu xóa hoàn thành
          await Promise.all(deleteRequests);

          // Xóa các hàng email đã xóa khỏi DOM
          checkboxes.forEach(checkbox => {
            const row = checkbox.closest('tr');
            row.remove();
          });

          alert('Đã xóa email thành công!');
        } catch (error) {
          console.error('Lỗi khi xóa email:', error);
          alert('Có lỗi xảy ra khi xóa email.');
        }
      }
    });
  </script>

</body>

</html>